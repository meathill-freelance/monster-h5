#loading
  background-color #111
  display flex
  flex-direction column
  align-items center
  color #CCC

  header
    width 100%
    height 50%
    position relative

    p
      position absolute
      top 50%
      left 0
      right 0
      margin-top -.5em
      text-align center
      opacity 0
      animation 16s linear infinite keyword

      for n in 1..4
        &:nth-child({n})
          font-size 1 + .25em * (n - 1)
          animation-delay 4s * (n - 1)

  footer
    width 100%
    height 50%
    display flex
    justify-content center
    align-items flex-start
    position relative

    img
      width 82%

    > img
      opacity 0
      transition 1s opacity

      &.in
        opacity .6

    .bar
      position absolute
      left 9%
      height 100%
      background-repeat no-repeat
      background-size 100%

@keyframes keyword {
  0% {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }
  8% {
    opacity: 1;
    transform: none;
  }
  17% {
    opacity: 1;
    transform: none;
  }
  25% {
    opacity: 0;
    transform: translate3d(0, -100%, 0);
  }
  100% {
    transform: translate3d(0, 100%, 0);
  }
}