#loading
  background-color #000
  display flex
  flex-direction column
  align-items center
  color #CCC

  header
    width 100%
    height 50%
    position relative

    p
      position absolute
      top 50%
      left 0
      right 0
      margin-top -.5em
      text-align center
      opacity 0
      animation 16s linear infinite keyword

      for n in 1..4
        &:nth-child({n})
          animation-delay 4s * (n - 1)

  footer
    width 100%
    height 50%
    display flex
    justify-content center
    align-items flex-start
    position relative

    img
      width 77.3333334%

    > img
      opacity 0
      transition 1s opacity

      &.in
        opacity .6

    .bar
      position absolute
      left 11.3333333%
      height 100%
      background-repeat no-repeat
      transition .2s width

@keyframes keyword {
  0% {
    opacity: 0;
  }
  8% {
    opacity: 1;
  }
  17% {
    opacity: 1;
  }
  25% {
    opacity: 0;
  }
}