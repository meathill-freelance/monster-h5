.simple-button
  background-color: #ff2400;
  border: none;
  border-radius: 5px;
  box-shadow inset 0 0 #ec8744, inset 0 8px 16px rgba(#e7932f, .59)
  color: white;
  height: 33.333px;
  display: block;
  margin: 0;
  width: 100%;
  padding: 0 1em;

  + .form-option
    margin-top 11px

  &:focus
    outline none

  for n in (1..4)
    &:nth-of-type({n})
      animation-delay .33s * n + .8s

  &:hover,
  &:active
    background-image linear-gradient(to bottom, #700505, #60140a)
