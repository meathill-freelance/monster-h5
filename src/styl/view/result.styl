@import "../component/button.styl"

#result
  display flex
  justify-content center
  align-items center
  flex-direction column

  .result-image
    width 97.87037037vw
    height 127.5386667vw

  .result-cute
    width 100vw

  .invisible
    visibility hidden

  h1
    margin 5.148148148vw 0 2vw
    font-size 9.259259259vw
    line-height 10.648148148vw
    width 87.814814815vw

  .lead
    width 86.814814815vw
    font-size 4.259259259vw
    line-height 5vw
    margin 0 0 1vw

.btn-group
  display flex
  justify-content space-between
  width 100%
  padding 0 6.388888889vw
  position relative
  top -12vw

.result-button
  margin 0
  padding 0
  width 27.87037037vw
  filter drop-shadow(0 5px 0 9px rgba(#1e0505, .36))
  transition .4s transform

  img
    display block
    max-width 100%

  &:hover,
  &:active
    filter none
    transform translateY(2.5px)
