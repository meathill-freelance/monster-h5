@import "../component/button.styl"

#result
  display flex
  justify-content center
  align-items center
  flex-direction column

  .result-image
    width 97.87037037vw

.btn-group
  display flex
  justify-content space-between
  width 100%
  padding 4.074074074vw 6.388888889vw 0

.result-button
  margin 0
  padding 0
  width 27.87037037vw
  filter drop-shadow(0 5px 0 9px rgba(#1e0505, .36))
  transition .4s transform

  img
    display block
    max-width 100%

  &:hover,
  &:active
    filter none
    transform translateY(2.5px)
